<h2>List of ToDos:</h2>
<hr>
<a href="http://localhost:8081/user/new">

<button class="btn btn-success mt-4" >Add Todo</button></a>

{{#each ToDo}}
<div class="card mt-4">
    <div class="card-body">

        <h4>{{nome}}</h4>
        <small>{{description}}</small> <br>
        <small>Date of creation: {{date}}</small> 
        <a href="/user/edit/{{_id}}"> <button class="btn btn-success mt-4">Edit ToDo</button></a>
    </div>
</div>

{{else}}

{{/each}}