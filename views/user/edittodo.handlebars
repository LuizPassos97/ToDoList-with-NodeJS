  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Edit ToDo: </h3>
<div class="card">
  <form action="/user/edit" method="POST">
  <input hidden  name="id" value="{{ToDo._id}}" id="id" >
    <div class="card-body">
      <label for="nome">Nome: </label>
      <input class="form-control" type="text" id="nome" name="nome" placeholder="Name of Todo" value="{{ToDo.nome}}"></input>
      <label for="description">Description: </label>
      <input class="form-control" type="text" name="description" id="description" placeholder="Description of ToDo" value="{{ToDo.description}}">
      <br>
      <button type="submit" class="btn btn-success">Edit ToDo</button>
  </form>
</div>
</div>